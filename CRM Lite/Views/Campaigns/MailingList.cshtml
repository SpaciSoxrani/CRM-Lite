                Изменения сохранены успешно!
            </div>
            <div class="col-4">
                <div class="input-group mb-3">
                    <form class="w-100 d-flex" novalidate>
                        <input type="text" id="marketing-list-name" class="form-control" placeholder="Название маркетингового списка" aria-label="Название маркетингового списка">
                        <div class="input-group-append">
                            <button class="btn btn-primary" style="display: none;" id="marketing-list-name-save-btn" type="button" onclick="createMarketingList(this);">
                                <i class="fa fa-check" aria-hidden="true"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row justify-content-around">

                    <div class="form-group col-md-3">
                        <label for="role">Роль</label>
                        <br/>
                        <select class="form-control" style="width: 100%; height: 2.5em;" id="role"></select>
                    </div>

                    <div class="form-group col-md-5">
                        <label for="town">Город</label>
                        <br/>
                        <input id="town" name="town" style="width: 100%; height: 2.5em;" type="text" class="form-control"/>
                    </div>

                    <div class="form-group col-md-3">
                        <label for="industry">Отрасль</label>
                        <br/>
                        <select class="form-control" style="width: 100%; height: 2.5em;" id="industry"></select>
                    </div>
                </div>
                <div class="row justify-content-around">
                    <div class="form-group col-md-3">
                        <label for="gender">Пол</label>
                        <br/>
                        <select class="form-control" style="width: 100%; height: 2.5em;" id="gender"></select>
                    </div>

                    <div class="form-group col-md-5">
                        <label for="contact-name">ФИО</label>
                        <br/>
                        <input id="contact-name" style="width: 100%; height: 2.5em;" type="text" class="form-control"/>
                    </div>

                    <div class="form-group col-md-3">
                        <label for="organization">Организация</label>
                        <br/>
                        <select multiple="multiple" class="form-control" style="width: 100%; height: 2.5em;" id="organization"></select>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <table id="contacts-table" class="table table-hover">
                <thead>
                <tr>
                    <th></th>
                    <th>Id</th>
                    <th>ФИО</th>
                    <th>E-mail</th>
                    <th>Организация</th>
                    <th>Должность</th>
                    <th>Ответственный менеджер</th>
                    <th>Департамент</th>
                    <th>Тип подарка</th>
                    <th>Доставка</th>
                </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
</div>

<div id="modal-new-marketing-list" class="modal">
    <div class="modal-dialog animated">
        <div class="modal-content">
            <div class="d-flex justify-content-end">
                <i class="fa fa-times fa-2x" aria-hidden="true" onclick="modalNewMarketingList.close();"></i>
            </div>
            <div class="d-flex justify-content-center mt-2">
                <div class="input-group mb-3">
                    <input type="text" id="marketing-list-new-name" class="form-control" placeholder="Название маркетингового списка" aria-label="Название маркетингового списка">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button" onclick="createMarketingList(this);">Создать</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modal-add-contact-to-marketinglist" class="modal">
    <div class="modal-dialog animated">
        <div class="modal-content">
            <div class="d-flex justify-content-center row mt-2">
                <div class="form-group required col-md-12">
                    <label for="present-type">Тип подарка</label>
                    <br />
                    <select class="form-control" style="width: 100%; height: 2.5em;" id="present-type"></select>
                </div>
                <div class="form-group row col-md-12 pt-2">
                    <div class="col-2">
                        <label for="need-to-deliver">
                            Доставка
                        </label>
                    </div>
                    <div class="col-2">
                        <label class="switch switch-3d switch-primary">
                            <input id="need-to-deliver"
                                   type="checkbox" class="switch-input"/>
                            <span class="switch-label"></span>
                            <span class="switch-handle"></span>
                        </label>
                    </div>
                </div>

                <div class="row col-md-12 no-gutters" id="delivery-block" style="display: none">
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" placeholder="Адрес" id="contact-delivery-address" aria-label="Адрес">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" placeholder="Индекс" id="contact-delivery-index" aria-label="Индекс">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" placeholder="Телефон" id="contact-delivery-phone" aria-label="Телефон">
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" placeholder="Контактное лицо" id="contact-delivery-name" aria-label="Контактное лицо">
                    </div>
                </div>
                
            </div>
            <div class="d-flex justify-content-center pt-2">
                <button class="btn btn-secondary mr-2" type="button" onclick="rejectAddingContact();">Отменить</button>
                <button class="btn btn-primary" type="button" onclick="addContactToMarketingList(this);">Добавить</button>
            </div>
        </div>
    </div>
</div>

