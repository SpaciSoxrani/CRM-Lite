
@{
    ViewData["Name"] = "Список контактов";
}
<div class="animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <strong>Фильтрация</strong>
                    <div class="ml-2 d-inline">
                        <button class="btn-primary rounded border-0" onclick="removeAllFilters();">
                            Очистить всё
                        </button>
                        @if (ViewBag.IsTop || ViewBag.IsDepHeader)
                        {
                            <button class="btn-success rounded border-0" onclick="table.buttons()[0].node.click();">
                                Выгрузить в excel
                            </button>
                        }
                        </div>
                    <div class="card-actions">
                        <a href="#" class="btn btn-minimize" data-toggle="collapse"
                           data-target="#filter-body"
                           aria-expanded="true"><i class="icon-arrow-down"></i></a>
                    </div>
                </div>
                <div id="filter-body" class="card-body collapse show mb-5" style="padding-bottom: 0;">

                    <div class="row">

                        <div class="col">
                            <div class="form-group">
                                <select id="gender-filter" class="selectpicker show-tick show-menu-arrow" multiple
                                        title="Пол"
                                        data-width="90%"
                                        data-actions-box="true"
                                        data-size="2"
                                        data-style="btn-primary"
                                        data-deselect-all-text="Удалить все"
                                        data-select-all-text="Выбрать все"
                                        data-live-search="true">
                                </select>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group">
                                <select id="sale-filter" class="selectpicker show-tick show-menu-arrow" multiple
                                        title="Ответственный"
                                        data-width="90%"
                                        data-actions-box="true"
                                        data-count-selected-text="{0} сотрудника выбрано"
                                        data-size="5"
                                        data-style="btn-primary"
                                        data-deselect-all-text="Удалить все"
                                        data-select-all-text="Выбрать все"
                                        data-selected-text-format="count"
                                        data-live-search="true">
                                </select>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group">
                                <select id="sales-office-filter" class="selectpicker show-tick show-menu-arrow" multiple
                                        title="Офис продаж"
                                        data-width="90%"
                                        data-actions-box="true"
                                        data-count-selected-text="{0} офисов выбрано"
                                        data-size="5"
                                        data-style="btn-primary"
                                        data-deselect-all-text="Удалить все"
                                        data-select-all-text="Выбрать все"
                                        data-selected-text-format="count"
                                        data-live-search="true">
                                </select>
                            </div>
                        </div>


                        <div class="col">
                            <div class="form-group">
                                <select id="role-filter" class="selectpicker show-tick show-menu-arrow" multiple
                                        title="Роль"
                                        data-width="90%"
                                        data-actions-box="true"
                                        data-count-selected-text="{0} ролей выбрано"
                                        data-size="5"
                                        data-style="btn-primary"
                                        data-deselect-all-text="Удалить все"
                                        data-select-all-text="Выбрать все"
                                        data-selected-text-format="count"
                                        data-live-search="true">
                                </select>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group">
                                <select id="organization-filter" class="selectpicker show-tick show-menu-arrow" multiple
                                        title="Организация"
                                        data-width="90%"
                                        data-actions-box="true"
                                        data-count-selected-text="{0} организаций выбрано"
                                        data-size="5"
                                        data-style="btn-primary"
                                        data-deselect-all-text="Удалить все"
                                        data-select-all-text="Выбрать все"
                                        data-selected-text-format="count"
                                        data-live-search="true">
                                </select>
                            </div>
                        </div>

                        <div class="col">
                            <div class="form-group">
                                <input type="text" class="form-control" id="city" placeholder="Город" />
                            </div>
                        </div>

                    </div>

                </div>
                <table id="contacts-table" class="table table-hover">
                    <thead>
                        <tr>
                            <th>id</th>
                            <th>Фамилия</th>
                            <th>Имя</th>
                            <th>Отчество</th>
                            <th>Организация</th>
                            <th>Ответственное лицо</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Styles {
    <link href="~/lib/datepicker/css/datepicker.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/lib/datatables/datatables.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.17/dist/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="https://unpkg.com/tippy.js@6/animations/scale.css" />

    <style>
        .filter-option-inner-inner {
            color: white;
            display: block;
            max-width: 200px !important;
            text-overflow: ellipsis;
        }

        .checked-filter {
            background-color: #ff6a00 !important;
        }

        #city {
            color: white;
            background-color: #20a8d8;
        }

            #city::-webkit-input-placeholder {
                color: white;
                font-size: 0.875rem;
                font-family: Verdana;
                font-style: normal !important;
            }

        #city::-webkit-input-placeholder       {opacity: 1; transition: opacity 0.3s ease;}
        #city::-moz-placeholder                {opacity: 1; transition: opacity 0.3s ease;}
        #city:-moz-placeholder                 {opacity: 1; transition: opacity 0.3s ease;}
        #city:-ms-input-placeholder            {opacity: 1; transition: opacity 0.3s ease;}
        #city:focus::-webkit-input-placeholder {opacity: 0; transition: opacity 0.3s ease;}
        #city:focus::-moz-placeholder          {opacity: 0; transition: opacity 0.3s ease;}
        #city:focus:-moz-placeholder           {opacity: 0; transition: opacity 0.3s ease;}
        #city:focus:-ms-input-placeholder      {opacity: 0; transition: opacity 0.3s ease;}

        #contacts-table_filter {
            text-align: left !important;
        }
    </style>
}

@section Scripts {

    <script>
        var True = true;
        var False = false;
        var isTop = @ViewBag.IsTop.ToString();
        var isDepHeader = @ViewBag.IsDepHeader.ToString();
    </script>
    <script src="~/lib/autonumeric/autoNumeric-2.0-BETA.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@2.2.0/src/js.cookie.min.js"></script>
    <script type="text/javascript" src="~/lib/datepicker/js/datepicker.min.js"></script>
    <script type="text/javascript" src="~/lib/datatables/datatables.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script src="https://unpkg.com/@@popperjs/core@2/dist/umd/popper.min.js"></script>
    <script src="https://unpkg.com/tippy.js@6/dist/tippy-bundle.umd.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.17/dist/js/bootstrap-select.min.js"></script>

    <script type="text/javascript" src="~/js/Contact/ContactList/contactList.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/Contact/ContactList/filterItem.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/Contact/ContactList/InitializeEventTriggers.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/Contact/ContactList/InitializeFilters.js" asp-append-version="true"></script>
    <script type="text/javascript" src="~/js/Contact/ContactList/mapToGetElementFromKey.js" asp-append-version="true"></script>
}
