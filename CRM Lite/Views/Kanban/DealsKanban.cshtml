
@{
    ViewData["Name"] = "DealsKanban";
}

    <div class="tab-pane fade show active" id="deals">
        <div class="card">
            <div class="card-header">
                <strong>Фильтрация</strong>
                <div class="card-actions">
                    <a href="#" class="btn btn-minimize" data-toggle="collapse"
                       data-target="#filter-body"
                       aria-expanded="true"><i class="icon-arrow-down"></i></a>
                </div>
            </div>
            <div id="filter-body" class="card-body collapse show" style="padding-bottom: 0px;">

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group ">
                            <label class="switch switch-3d switch-primary">
                                <input id="my-deals"
                                       type="checkbox" class="switch-input" />
                                <span class="switch-label"></span>
                                <span class="switch-handle"></span>
                            </label>
                            <label class="form-check-inline" for="my-deal">Мои сделки</label>
                        </div>
                    </div>
                </div>
                @* 1 *@
                <div class="row" id="find-sale">


                    <div class="form-group col-md-4">
                        <label for="department">Продающий департамент</label>
                        <br />
                        <select class="form-control" style="width: 100%; height: 2.5em;" id="department"></select>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="section">Продающий отдел</label>
                        <br />
                        <select class="form-control" style="width: 100%; height: 2.5em;" id="section"></select>
                    </div>

                    <div class="form-group col-md-4">
                        <label for="man">Сейл</label>
                        <br />
                        <select class="form-control" style="width: 100%; height: 2.5em;" id="man"></select>
                    </div>
                </div>
                @* 2 *@
                <div class="row">

                    <div class="form-group col-md-3">
                        <label for="client">Клиент</label>
                        <br />
                        <select class="form-control" style="width: 100%; height: 2.5em;" id="client"></select>
                    </div>

                    <div class="form-group col-md-3">
                        <label for="short-name">Название сделки</label>
                        <input type="text" class="form-control" id="short-name" placeholder="Название сделки">
                    </div>

                    <div class="form-group col-md-3">
                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-10">
                                <label class="row">Дата создания</label>
                            </div>
                        </div>
                        <div class="row" style="justify-content: flex-end;">
                            <div class="form-group col-md-5">

                                <input id="first-date-created" type="date" style="width: 100%; height: 2.5em;"
                                       class="form-control" />
                            </div>
                            <div style="line-height: 2.5em; font-weight: bold;">—</div>
                            <div class="form-group col-md-5">

                                <input id="last-date-created" type="date" style="width: 100%; height: 2.5em;"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="form-group col-md-3">

                        <div class="row">
                            <div class="col-md-2"></div>
                            <div class="col-md-10">
                                <label class="row">Дата последнего изменения</label>
                            </div>
                        </div>
                        <div class="row" style="justify-content: flex-end;">

                            <div class="form-group col-md-5">

                                <input id="first-date" type="date" style="width: 100%; height: 2.5em;"
                                       class="form-control" />
                            </div>

                            <div style="line-height: 2.5em; font-weight: bold;">—</div>

                            <div class="form-group col-md-5">

                                <input id="last-date" type="date" style="width: 100%; height: 2.5em;"
                                       class="form-control" />
                            </div>
                        </div>
                    </div>

                </div>
                <br />

                <div class="row" style="justify-content: flex-end; margin-right: 0px; margin-bottom: 15px;">
                    <input type="button" id="filter" class="btn btn-primary" value="Найти">
                </div>

            </div>
        </div>

        <div class="kanban-container">
            <div data-order="1" class="kanban-board" style="width: 14%; margin-left: 0px; margin-right: 0px;">
                <header class="info">
                    <div class="info-text">Верификация потребности</div>
                </header>
                <main class="kanban-body" id="verification">
                </main>
            </div>

            <div data-order="1" class="kanban-board" style="width: 14%; margin-left: 3px; margin-right: 0px;">
                <header class="info">
                    <div class="info-text">Разработка проекта технического решения</div>
                </header>
                <main class="kanban-body" id="development">
                </main>
            </div>

            <div data-order="1" class="kanban-board" style="width: 14%; margin-left: 3px; margin-right: 0px;">
                <header class="info">
                    <div class="info-text">Согласование решения</div>
                </header>
                <main class="kanban-body" id="negotiating">
                </main>
            </div>

            <div data-order="1" class="kanban-board" style="width: 14%; margin-left: 3px; margin-right: 0px;">
                <header class="info">
                    <div class="info-text">Конкурсная процедура</div>
                </header>
                <main class="kanban-body" id="contest">
                </main>
            </div>

            <div data-order="1" class="kanban-board" style="width: 14%; margin-left: 3px; margin-right: 0px;">
                <header class="info">
                    <div class="info-text">Подписание контракта</div>
                </header>
                <main class="kanban-body" id="contract-signed">
                </main>
            </div>

            <div data-order="1" class="kanban-board" style="width: 14%; margin-left: 3px; margin-right: 0px;">
                <header class="info">
                    <div class="info-text">Работа по контракту</div>
                </header>
                <main class="kanban-body" id="contract-works">
                </main>
            </div>

            <div data-order="1" class="kanban-board" style="width: 14%; margin-left: 3px; margin-right: 0px;">
                <header class="info">
                    <div class="info-text">Контракт закрыт</div>
                </header>
                <main class="kanban-body" id="contract-closed">
                </main>
            </div>
        </div>
    </div>