
@{
	ViewData["Name"] = "Vendor";
}
<div class="animated fadeIn">
	<div class="card">
		<div class="card-body">
			<div class="col">
				<div class="col">

					<div class="row">
						<div class="form-group col-md-4 required">
							<label for="name">Имя вендора</label>
							<input type="text" class="form-control" id="name" required placeholder="Имя вендора">
						</div>

						<div class="form-group col-md-4 required">
							<label for="product-line">Продуктовое направление</label>
							<br />
							<select class="form-control" required style="width:100%; height:2.5em;" id="product-line"></select>
						</div>

						<div class="form-group col-md-4 required">
							<label for="responsible">Ответственный продакт</label>
							<br />
							<select class="form-control" style="width:100%; height:2.5em;" id="responsible" required></select>
						</div>
					</div>

				</div>
			</div>
		</div>
		<div class="card-footer">
			<div class="row" style="justify-content:center">
				<label id="error" style="visibility:hidden; color:red">Заполните необходимые поля</label>
			</div>
			<div class="row form-actions text-center" style="justify-content:center;">
				<input id="save" onclick="SaveVendor()" style="margin:5px;" type="button" class="btn btn-primary" value="Сохранить">
				<input id="delete" onclick="DeleteVendor()" style="display:none; margin:5px;" type="button" class="btn btn-danger" value="Удалить">
			</div>

		</div>
	</div>
</div>
@section Scripts
{
	<script src="~/lib/select2/select2.min.js"></script>

	<script>
		$("select").select2({
			placeholder: "Выберите элемент",
			allowClear: true
		});
	</script>

	<script src="~/js/Admin/vendor.js" asp-append-version="true"></script>
}


@section Styles {

	<link href="~/lib/select2/select2.min.css" rel="stylesheet" />
	<link href='~/lib/dropzone/dropzone.css' type='text/css' rel='stylesheet'>
