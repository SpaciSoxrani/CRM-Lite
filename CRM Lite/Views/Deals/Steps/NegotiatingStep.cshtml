@using CRM.UI.Utils.ViewUtils
@model CRM.UI.Models.DealViewModel

<div>
    @* /////////////////////////// files /////////////////////////////////////////// *@
    <div id="all-files-3" class="modal">
        <div class="modal-dialog animated" style="max-width:60% !important">
            <div class="modal-content" style="overflow: scroll;">

                <div class="modal-header">
                    <strong>Список файлов</strong>
                </div>

                <div class="row" id="files-content-3" style="padding:15px; align-items:center; justify-content: center;">

                </div>

                <div class="modal-footer">
                    <button class="btn btn-default" id="close" type="button" onclick="modal.close()">Закрыть</button>
                </div>


            </div>

        </div>
    </div>

    @* ////////////////////////////////////////////////////////////////////// *@

<div class="row">
        <div class="col">
            <div class="row col">
                <div class="form-inline col-auto">

                    <label for="hint-negotiating-step-probability" style="margin-right:1rem;">Вероятность  </label>


                    <input type="text" value="40%" class="form-control"
                           style="width:25%;"
                           id="hint-negotiating-step-probability" readonly />
                </div>

                <div class="form-inline col-auto">

                    <label for="hint-negotiating-step-is-probable" style="white-space:nowrap; margin-right:1rem;">Вероятная сделка</label>

                    <select class="form-control is-probable" id="hint-negotiating-step-is-probable" style="width:11em;">
                    </select>

                </div>

                <div class="form-inline col-auto status">

                    <label for="hint-negotiating-status" style="margin-right:1rem;">Статус сделки </label>


                    <input type="text" value="Активная" class="form-control deal-status"
                           id="hint-negotiating-status" readonly />
                </div>

                @if (Model != null && Model.IsClosed && Model.ClosureDate.HasValue)
                {
                    <div class="form-inline col-auto">
                        <label style="margin-right: 1rem;">Дата закрытия сделки</label>
                        <input readonly class="form-control" type="text" value="@(Model?.ClosureDate.GetValueOrDefault().ToShortDateString())" />
                    </div>
                }

                <div class="form-inline row col-auto put-off-and-close @(Model?.StepName == "Согласование решения" ? "" : "d-none")">
                    <div class="col-auto">
                        <input id="put-off-deal" type="button" onclick="modalPutOff.open()" class="btn btn-primary put-off-deal" value="Отложить сделку">
                    </div>
                    <div class="">
                        <input onclick="acceptToCloseDeal()" type="button" style="display: none;" class="btn btn-primary accept-closing-deal" value="Согласовать закрытие сделки">
                    </div>
                    <div class="">
                        <input id="submit" onclick="reopenDeal()" type="button" style="display: none;" class="btn btn-primary reopen-deal" value="Возобновить сделку">
                    </div>
                    <div class="col">
                        <input type="button" onclick="modalFinishDeal.open();" class="btn btn-primary finish-deal" value="Потеря сделки">
                    </div>
                </div>
            </div>

            <fieldset class="tasks">
                <legend>Задачи текущего этапа</legend>
                <div class="row">
                    <div class="col-md-6 col-xl-3">
                        <div class="form-group row @(Model?.IsDvs == true ? "" : "required")">
                            <div class="col-2">
                                <label class="switch switch-3d switch-primary">
                                    <input id="hint-negotiating-step-meeting-with-customer" @(Model?.IsDvs == true ? "" : "required")
                                           type="checkbox" class="switch-input" />
                                    <span class="switch-label"></span>
                                    <span class="switch-handle"></span>
                                </label>
                            </div>
                            <div class="col">
                                <label title="Встретиться с Заказчиком для презентации/обсуждения решения"
                                       for="hint-negotiating-step-meeting-with-customer">
                                    Встретиться<wbr /> с Заказчиком
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-xl-3">
                        <div class="form-group row @(Model != null && Model.IsDvs ? "" : "required")">
                            <div class="col-2">
                                <label class="switch switch-3d switch-primary">
                                    <input id="hint-negotiating-step-approve-specification-with-customer" @(Model != null && Model.IsDvs ? "" : "required")
                                           type="checkbox" class="switch-input" />
                                    <span class="switch-label"></span>
                                    <span class="switch-handle"></span>
                                </label>
                            </div>
                            <div class="col">
                                <label style="flex-wrap: wrap"
                                       for="hint-negotiating-step-approve-specification-with-customer">
                                    Согласовать спецификацию с Заказчиком
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-xl-3">
                        <div class="form-group row @(Model?.IsDvs == true ? "" : "required")">
                            <div class="col-2">
                                <label class="switch switch-3d switch-primary">
                                    <input id="hint-negotiating-step-approve-solution-architecture-with-customer" @(Model?.IsDvs == true ? "" : "required")
                                           type="checkbox" class="switch-input" />
                                    <span class="switch-label"></span>
                                    <span class="switch-handle"></span>
                                </label>
                            </div>
                            <div class="col">
                                <label style="flex-wrap: wrap"
                                       for="hint-negotiating-step-approve-solution-architecture-with-customer">
                                    Согласовать архитектуру<br />решения с<wbr /> Заказчиком
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-xl-3">
                        <div class="form-group row">
                            <div class="col-2">
                                <label class="switch switch-3d switch-primary">
                                    <input id="hint-negotiating-step-work-through-objections"
                                           type="checkbox" class="switch-input">
                                    <span class="switch-label"></span>
                                    <span class="switch-handle"></span>
                                </label>
                            </div>
                            <div class="col">
                                <label title="Возражения/проблемные вопросы Заказчика"
                                       for="hint-negotiating-step-work-through-objections">
                                    Проработать<wbr /> возражения
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">

                    <div class="col-md-6 col-xl-3">
                        <div class="form-group row">
                            <div class="col-2">
                                <label class="switch switch-3d switch-primary">
                                    <input id="hint-negotiating-step-get-special-price-from-vendor"
                                           type="checkbox" class="switch-input" />
                                    <span class="switch-label"></span>
                                    <span class="switch-handle"></span>
                                </label>
                            </div>
                            <div class="col">
                                <label style="flex-wrap: wrap"
                                       for="hint-negotiating-step-get-special-price-from-vendor">
                                    Получить специальные цены у вендора
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-xl-3">
                        <div class="form-group row @(Model?.IsDvs == true ? "" : "required")">
                            <div class="col-2">
                                <label class="switch switch-3d switch-primary">
                                    <input id="hint-negotiating-step-layout-updating" @(Model?.IsDvs == true ? "" : "required")
                                           type="checkbox" class="switch-input" />
                                    <span class="switch-label"></span>
                                    <span class="switch-handle"></span>
                                </label>
                            </div>
                            <div class="col">
                                <label for="hint-negotiating-step-layout-updating">
                                    Актуализировать<wbr /> раскладку
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-xl-3">
                        <div class="form-group row">
                            <div class="col-2">
                                <label class="switch switch-3d switch-primary">
                                    <input id="hint-negotiating-step-work-out-defense-mechanisms"
                                           type="checkbox" class="switch-input" />
                                    <span class="switch-label"></span>
                                    <span class="switch-handle"></span>
                                </label>
                            </div>
                            <div class="col">
                                <label for="hint-negotiating-step-work-out-defense-mechanisms">
                                    Проработать<wbr /> механизмы<wbr /> защиты
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-xl-3">
                        <div class="form-group row">
                            <div class="col-2">
                                <label class="switch switch-3d switch-primary">
                                    <input id="hint-negotiating-step-work-out-tz"
                                           type="checkbox" class="switch-input" />
                                    <span class="switch-label"></span>
                                    <span class="switch-handle"></span>
                                </label>
                            </div>
                            <div class="col">
                                <label for="hint-negotiating-step-work-out-tz">
                                    Проработать ТЗ/<wbr />конкурсную<wbr /> документацию
                                </label>
                            </div>
                        </div>
                    </div>

                </div>

            </fieldset>
        </div>
    </div>


    <div class="row">
        <div class="col">

            <div class="form-group required">
                <label for="hint-negotiating-step-decision-maker">Лицо, принимающее решения</label>
                <br />
                <select style="width:100%; height:2.5em;" id="hint-negotiating-step-decision-maker" required
                        class="form-control">
                    @*	<option value="" selected disabled>Не выбрано</option>*@
                </select>
            </div>


            <div class="form-group">
                <label for="hint-negotiating-step-people-of-interest">Заинтересованные лица</label>
                <br />
                <select style="width:100%; height:2.5em;" id="hint-negotiating-step-people-of-interest" multiple="multiple"
                        class="form-control">
                    @*	<option value="" selected disabled>Не выбрано</option>*@
                </select>
            </div>


            <div class="form-group">
                <label for="hint-negotiating-step-competitors">Конкуренты</label>
                <input class="form-control"
                       id="hint-negotiating-step-competitors" />
            </div>

        </div>




        <div class="col">

            <div class="form-group required">
                <label for="hint-negotiating-step-estimated-budget">Предполагаемый бюджет</label>
                <input onkeydown="Auto(this)" required onclick="this.select();"
                       id="hint-negotiating-step-estimated-budget" class="form-control" />
            </div>

            <div class="form-group required">
                <label for="hint-negotiating-step-estimated-margin">Предполагаемая маржа</label>
                <input onkeydown="Auto(this)" required onclick="this.select();"
                       id="hint-negotiating-step-estimated-margin" class="form-control" />
            </div>

            <div class="form-group required">
                <label for="hint-negotiating-step-expert-margin">Экспертная маржа</label>
                <input id="hint-negotiating-step-expert-margin" required
                       onkeydown="Auto(this)" onclick="this.select();"
                       class="form-control" />
            </div>

        </div>


        <div class="col">

            <div class="form-group required">
                <label for="hint-negotiating-step-signing-date">Дата подписания контракта</label>
                <input type="text" class="datepicker-here form-control" placeholder="дд.мм.гггг" required
                       id="hint-negotiating-step-signing-date" style="width:100%; height:2.5em;" />
            </div>

            <div class="form-group required">
                <label for="hint-negotiating-step-closing-date">Дата закрытия контракта</label>
                <input type="text" class="datepicker-here form-control" placeholder="дд.мм.гггг" required
                       id="hint-negotiating-step-closing-date" style="width:100%; height:2.5em;" />
            </div>

            <div id="request-negotiating" style="display:@(DealViewFunctions.GetStepNumber(Model?.StepName) > 2 ? "block" : "none")">
                <fieldset>
                    <legend>Заявка на продуктирование</legend>

                    <div class="row" style="justify-content:space-around;">
                        <a href="#" id="showModal" onclick="getModal();" 
                           style="display:@(DealViewFunctions.GetCssVisibleClassesForCurrentStep("Согласование решения", Model?.StepName, Model?.DealStatusName))" 
                           class="btn btn-primary">Создать заявку</a>
                        <a class="btn view-product-deals-btn btn-primary @(Model?.ProductRequestIds.Count > 0 ? "" : "d-none")" href="/Deals/ProductRequests/@ViewBag.DealId" target="_blank">Просмотреть заявки</a>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <fieldset>
                <legend>
                    <input type="button" onclick="GetAllFiles(3)" class="btn btn-primary file-window" value="Прикрепленные файлы" />
                </legend>

                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="additional-files" class="small" title="Дополнительные файлы">
                                Дополнительные файлы
                                <a href="#"
                                   class="popover-cloud"
                                   data-toggle="popover"
                                   data-placement="top" title="Ссылка на Hostco cloud"
                                   data-trigger="click"
                                   data-html="true"
                                   data-popover-content="#additional-files-negotiating-cloud-popover">
                                    <i class="fa fa-cloud-upload fa-lg" aria-hidden="true"></i>
                                </a>
                            </label>
                            <div id="additional-files-negotiating-cloud-popover" class="cloud-link-block" style="display:none">
                                <div class="row">
                                    <div class="col-9">
                                        <input onchange="checkСloudLink(this);" onclick="this.select();"
                                               id="additional-files-negotiating-cloud"
                                               title="Тут должна быть ссылка на облако"
                                               class="form-control" />
                                    </div>
                                    <div class="col-3 pl-0 d-flex align-middle">
                                        <a class="btn btn-primary btn-sm btn-block h-100 save-cloud-link">
                                            <i class="fa fa-check fa-2x text-white" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <form style="display: inline-block" class="dropzone additional-files d-inline">
                                <input type="button" class="btn dz-default dz-message d-inline upload-btn" value="Загрузить файл" />
                            </form>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group @(Model?.IsDvs == true ? "" : "required")">
                            <label title="Согласованное / Утвержденное Заказчиком КП/ТКП"
                                   for="negotiating-file-updated-commercial-proposal" class="small">Согласованное / Утвержденное Заказчиком КП/ТКП</label>
                            <br />
                            <form style="display: inline-block" class="dropzone" id="negotiating-file-updated-commercial-proposal">
                                <input type="button" class="btn dz-default dz-message upload-btn" value="Загрузить файл" @(Model?.IsDvs == true ? "" : "required") />
                            </form>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="negotiating-file-special-prices-specification" class="small">Спецификация со специальными ценами</label>
                            <br />
                            <form style="display: inline-block" class="dropzone" id="negotiating-file-special-prices-specification">
                                <input type="button" class="btn dz-default dz-message upload-btn" value="Загрузить файл" />
                            </form>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label title="Документация, полученная от Заказчика на ранних стадиях"
                                   for="negotiating-file-contest-documentation" class="small">
                                Конкурсная документация
                                <a href="#"
                                   class="popover-cloud"
                                   data-toggle="popover"
                                   data-placement="top" title="Ссылка на Hostco cloud"
                                   data-trigger="click"
                                   data-html="true"
                                   data-popover-content="#negotiating-file-contest-documentation-cloud-popover">
                                    <i class="fa fa-cloud-upload fa-lg" aria-hidden="true"></i>
                                </a>
                            </label>
                            <div id="negotiating-file-contest-documentation-cloud-popover" class="cloud-link-block" style="display:none">
                                <div class="row">
                                    <div class="col-9">
                                        <input onchange="checkСloudLink(this);" onclick="this.select();"
                                               id="negotiating-file-contest-documentation-cloud"
                                               title="Тут должна быть ссылка на облако"
                                               class="form-control" />
                                    </div>
                                    <div class="col-3 pl-0 d-flex align-middle">
                                        <a class="btn btn-primary btn-sm btn-block h-100 save-cloud-link">
                                            <i class="fa fa-check fa-2x text-white" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <form style="display: inline-block" class="dropzone" id="negotiating-file-contest-documentation">
                                <input type="button" class="btn dz-default dz-message upload-btn" value="Загрузить файл" />
                            </form>
                        </div>
                    </div>
                </div>

                <div class="row">
                    
                    <div class="col-md-3">
                        <div class="form-group @(Model?.IsDvs == true ? "" : "required")">
                            <label for="negotiating-file-updated-layout" class="small">Актуальная раскладка</label>
                            <br />
                            <form style="display: inline-block" class="dropzone" id="negotiating-file-updated-layout">
                                <input type="button" class="btn dz-default dz-message upload-btn" value="Загрузить файл" @(Model?.IsDvs == true ? "" : "required") />
                            </form>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label for="negotiating-file-meeting-report" class="small">
                                Отчет по результатам встречи
                            </label>
                            <br />
                            <form style="display: inline-block" class="dropzone" id="negotiating-file-meeting-report">
                                <input type="button" class="btn dz-default dz-message upload-btn" value="Загрузить файл" />
                            </form>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label title="ТЗ, которое формирует ХОСТ"
                                   for="negotiating-file-tz" class="small">
                                ТЗ на конкурс
                                <a href="#"
                                   class="popover-cloud"
                                   data-toggle="popover"
                                   data-placement="top" title="Ссылка на Hostco cloud"
                                   data-trigger="click"
                                   data-html="true"
                                   data-popover-content="#negotiating-file-tz-cloud-popover">
                                    <i class="fa fa-cloud-upload fa-lg" aria-hidden="true"></i>
                                </a>
                            </label>
                            <div id="negotiating-file-tz-cloud-popover" class="cloud-link-block" style="display:none">
                                <div class="row">
                                    <div class="col-9">
                                        <input onchange="checkСloudLink(this);" onclick="this.select();"
                                               id="negotiating-file-tz-cloud"
                                               title="Тут должна быть ссылка на облако"
                                               class="form-control" />
                                    </div>
                                    <div class="col-3 pl-0 d-flex align-middle">
                                        <a class="btn btn-primary btn-sm btn-block h-100 save-cloud-link">
                                            <i class="fa fa-check fa-2x text-white" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <form style="display: inline-block" class="dropzone" id="negotiating-file-tz">
                                <input type="button" class="btn dz-default dz-message upload-btn" value="Загрузить файл" />
                            </form>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>