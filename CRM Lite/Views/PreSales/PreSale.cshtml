        }

        textarea {
            resize: both;
        }

        #pre-sales-table_filter {
            text-align: left !important;
            padding-left: 10px;
        }

        #pre-sales-table_info {
            text-align: right !important;
        }

        .status-in-work {
            color: black;
            padding: 5px !important;
        }

        .status-not-interested {
            background: #E1E1E1;
            color: black;
            padding: 5px !important;
        }

        .status-call {
            color: black;
            padding: 5px !important;
        }

        .status-given-to-sale {
            background: #fff2cc;
            color: black;
            padding: 5px !important;
        }

        .result-refused {
            background: #EFEFEF;
            color: black;
            padding: 5px !important;
        }

        #pre-sale-group-name {
            font-weight: bold;
            font-style: italic;
            color: #20a8d8;
        }

        .btn-primary {
            color: white !important;
        }

        .bootstrap-select .dropdown-toggle:focus {
            outline: 0px none #fff !important;
        }

        .btn-gray {
            color: #3e515b !important;
            background-color: #fff;
            border: 1px solid #c2cfd6;
        }

        #pre-sales-table tr {
            font-size: 9.5pt;
        }

        .scrollStyle {
            height: 100vh;
            overflow-x: auto;
            overflow-y: auto;
        }
